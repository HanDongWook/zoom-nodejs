doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/app.css")
    body 
        header 
            h1 Doom
        main
            h2 Video
            div#myStream
                video#myFace(autoplay,playsinline, muted, width="400", height="400")
                div.button-container
                    button#mute Mute
                    button#camera Turn Camera Off
            h2 Chatting
            div#welcome
                form
                    input(placeholder="room name", reuiqred, type="text")
                    button Enter Room
                h4 Open Rooms: 
                ul
            div#room
                h3
                div#chat
                    h3
                    ul
                form#name
                    input(placeholder="nickname", reuiqred, type="text")
                    button Save
                form#msg
                    input(placeholder="message", reuiqred, type="text")
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/chat.js")
        script(src="/public/js/video.js")