doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Doom
        main
            div#welcome
                form
                    input(placeholder="room name", reuiqred, type="text")
