doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/app.css")
    body 
        header 
            h1 Doom
        main
            h2 Video
            div#videoWelcome
                form    
                    input(placeholder="video room name", required, type="text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400")
                    div.button-container
                        button#mute Mute
                        button#camera Turn Camera Off
                    select#cameras
            h2 Chatting
            div#chatWelcome
                form
                    input(placeholder="chat room name", reuiqred, type="text")
                    button Enter Room
                h4 Open Rooms: 
                ul
            div#chatRoom
                h3
                div#chat
                    h3
                    ul
                form#name
                    input(placeholder="nickname", reuiqred, type="text")
                    button Save
                form#msg
                    input(placeholder="message", reuiqred, type="text")
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/chat.js")
        script(src="/public/js/video.js")